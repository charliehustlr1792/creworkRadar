generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Company {
  id             String   @id @default(cuid())
  name           String   @unique
  website        String?
  industry       String?
  stage          String?
  sizeEstimate   String?
  description    String?
  intentScore    Int      @default(0)
  scoreBreakdown Json?
  signalCount    Int      @default(1)
  whyFlagged     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  signals        Signal[]

  @@index([intentScore])
  @@index([industry])
}

model Signal {
  id         String   @id @default(cuid())
  companyId  String
  source     String
  signalType String
  rawText    String?
  url        String?
  detectedAt DateTime @default(now())
  company    Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([signalType])
}
